      <th scope="col"><%=letters.next!%></th>
      <%end%>
    </tr>
  </thead>
  <% 10.times do %>
  <tr>
    <th class="row-dark" scope="row">
      <%= data_y %>
    </th>
    <% 10.times do %>

    <td><% player_cells = @cells.select{|element| element.player == 2}.select{|element| element.y == data_y}.select{|element| element.x == data_x} %>
