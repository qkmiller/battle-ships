      <% else %>
      <%end%>
    </td>

      <% data_x += 1 %>
      <%end%>
      <% data_x = 1 %>
      <% data_y += 1 %>
    </tr>
    <%end%>
  </table>  <!-- TABLE FOR PLAYER 2'S GAMEBOARD -->
</div>  <!-- DIV FOR COL 2 -->


